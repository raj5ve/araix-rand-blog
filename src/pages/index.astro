---
import Layout from '../layouts/Layout.astro';
import Header from '../components/home/Header.astro';
import Links from '../components/home/Links.astro';
import Newsletter from '../components/home/Newsletter.astro';
import SocialLinks from '../components/home/SocialLinks.astro';
import AboutMe from '../components/home/AboutMe.astro';
import Footer from '../components/home/Footer.astro';
import { siteContent } from '../components/home/contents';
---

<Layout title={siteContent.meta.title}>
  <div class="min-h-screen bg-gradient-to-b from-purple-50 to-pink-50">
    <Header
      coverImage={siteContent.header.images.cover}
      avatarImage={siteContent.header.images.avatar}
      name={siteContent.header.name}
      bio={siteContent.header.bio}
    />
    
    <div class="max-w-2xl mx-auto px-4 relative z-10 space-y-8">
      <Links links={siteContent.links} />
      <Newsletter content={siteContent.newsletter} />
      <SocialLinks content={siteContent.social} />
      <AboutMe content={siteContent.about} />
    </div>
    
    <Footer content={siteContent.footer} />
  </div>
</Layout>
