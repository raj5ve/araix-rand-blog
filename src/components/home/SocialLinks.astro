---
const socialLinks = [
  {
    platform: "X",
    url: "https://x.com/araixrand",
    icon: "twitter"
  },
  {
    platform: "LinkedIn",
    url: "https://in.linkedin.com/in/araixrand",
    icon: "linkedin"
  },
  {
    platform: "YouTube",
    url: "#",
    icon: "youtube"
  },
  {
    platform: "Email",
    url: "mailto:hi@araixrand.com",
    icon: "mail"
  }
];
---

<div class="text-center space-y-4">
  <h2 class="text-2xl font-bold text-gray-800">Let's Connect</h2>
  <div class="flex justify-center gap-6">
    {socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={link.platform}
        class="text-[#F25D49] hover:text-[#FF8F75] transition-colors duration-300 hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class={`lucide lucide-${link.icon} w-6 h-6`}
        >
          {link.icon === 'twitter' && (
            <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
          )}
          {link.icon === 'linkedin' && (
            <>
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
              <rect width="4" height="12" x="2" y="9" />
              <circle cx="4" cy="4" r="2" />
            </>
          )}
          {link.icon === 'youtube' && (
            <>
              <path d="M2.5 17a24.12 24.12 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.56 49.56 0 0 1 16.2 0A2 2 0 0 1 21.5 7a24.12 24.12 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.55 49.55 0 0 1-16.2 0A2 2 0 0 1 2.5 17" />
              <path d="m10 15 5-3-5-3z" />
            </>
          )}
          {link.icon === 'mail' && (
            <>
              <rect width="20" height="16" x="2" y="4" rx="2" />
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
            </>
          )}
        </svg>
      </a>
    ))}
  </div>
</div>
