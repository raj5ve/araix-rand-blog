---
    const socialLinks = [
      { platform: "X", url: "https://x.com/yourxhandle", icon: "twitter" },
      { platform: "LinkedIn", url: "https://linkedin.com/in/yourprofile", icon: "linkedin" },
      // Add more social links
    ];
    ---
    <footer class="bg-gray-100 py-4 mt-8">
      <div class="container mx-auto px-4 text-center text-gray-600">
        <div class="flex justify-center space-x-4 mb-2">
          {socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.platform}>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class={`lucide lucide-${link.icon} w-6 h-6`}
              >
                {link.icon === 'twitter' && (
                  <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z" />
                )}
                {link.icon === 'linkedin' && (
                  <>
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect width="4" height="12" x="2" y="9" />
                    <circle cx="4" cy="4" r="2" />
                  </>
                )}
                <!-- Add more SVG paths for other social media icons -->
              </svg>
            </a>
          ))}
        </div>
        <p>Â© {new Date().getFullYear()} Your Blog Name. All rights reserved.</p>
      </div>
    </footer>
