---
    import Header from '../components/Header.astro';
    import Footer from '../components/Footer.astro';
    interface Props {
      title: string;
      description?: string;
      image?: string;
    }
    const { title, description, image } = Astro.props;
    ---
    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta name="description" content={description || 'Blog Post'}>
      <title>{title}</title>
    </head>
    <body class="antialiased bg-gradient-to-b from-purple-50 to-pink-50">
      <Header title={title} />
      <main class="container mx-auto px-4 py-8">
        {image && (
          <div class="mb-8">
            <img src={image} alt={title} class="rounded-xl shadow-md" />
          </div>
        )}
        <slot />
      </main>
      <Footer />
    </body>
    </html>
